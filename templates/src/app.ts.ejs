<% if (answers.language === 'JavaScript') { -%>
import express from 'express';
<% } else { -%>
import express, { Request, Response } from 'express';
<% } -%>
import dotenv from 'dotenv';
import cors from 'cors';
import helmet from 'helmet';
<% if (answers.parser) { -%>
import bodyParser from 'body-parser';
<% } -%>
<% if (answers.logger) { -%>
import morgan from 'morgan';
<% } -%>
<% if (answers.extendPrototypes) { -%>
<% if (answers.language === 'JavaScript') { -%>  
import { extendPrototypes } from './utils/extend-prototypes.js';
<% } else { -%>
import { extendPrototypes } from './utils/extend-prototypes';
<% } -%>
<% } -%>

dotenv.config();

const app = express();

app.use(helmet());
app.use(cors());
<% if (answers.parser) { -%>
app.use(bodyParser.json());
<% } -%>
<% if (answers.logger) { -%>
app.use(morgan('combined'));
<% } -%>

<% if (answers.language === 'JavaScript') { -%>
app.get('/', (req, res) => {
  res.json({ message: 'Hello from ExpressStart!' });
});
<% } else { -%>
app.get('/', (req: Request, res: Response) => {
  res.json({ message: 'Hello from ExpressStart!' });
});
<% } -%>

<% if (answers.language === 'JavaScript') { -%>
app.use((err, req, res, next) => {
  console.error(err.stack);
  res.status(500).json({ error: 'Something broke!' });
});
<% } else { -%>
app.use((err: any, req: any, res: any, next: any) => {
  console.error(err.stack);
  res.status(500).json({ error: 'Something broke!' });
});
<% } -%>

<% if (answers.extendPrototypes) { -%>
extendPrototypes(); // Comment to disable utils
<% } -%>

export default app;
